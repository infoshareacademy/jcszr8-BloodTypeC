@model IEnumerable<BloodTypeC.DAL.Beer>
@{
    ViewData["Title"] = "★ Favorites";
}

<h1>Your favorite beers</h1>

<div class="container-fluid">
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xxl-3 item">
                    <div class="card" style="width: 300px;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">by <strong>@item.Brewery</strong></p>
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">More details</a>
                            <a asp-action="RemoveFromFavorites" asp-route-id="@item.Id" class="btn btn-outline-warning">💔 Unfav</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div>The list is currently empty.</div>
        }
    </div>
</div>