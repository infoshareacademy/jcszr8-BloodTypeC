@using BloodTypeC.DAL.Models.Views;
@model FavoriteBeersViewModel
@{
    ViewData["Title"] = "★ Favorites";
}

<div class="page-name">
    Your favorite beers
</div>
<div class="products">
    @if (Model.FavoriteBeers.Any())
    {
        await Html.RenderPartialAsync("_BeerPartialView", Model.FavoriteBeers);
    }
    else
    {
        <div class="empty">
            The list is currently empty.
        </div>
    }
</div>
<div class="button-margin">
    <div class="buttons">
        <button onclick="@("window.location.href='" + Url.Action("Index", "Home") + "'")" class="search-button">
            Back to list
        </button>
    </div>
</div>