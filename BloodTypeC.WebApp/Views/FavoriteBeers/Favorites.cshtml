@using BloodTypeC.DAL.Models
@using BloodTypeC.DAL.Models.Views;
@model FavoriteBeersViewModel
@{
    ViewData["Title"] = "★ Favorites";
}

<div class="page-name">
    Your favorite beers
</div>

<div class="products">
    @if (Model.FavoriteBeers.Any())
    {
        @Html.Partial("_BeerPartialView", Model.FavoriteBeers)
    }
    else
    {
        <div class="empty">
            The list is currently empty.
        </div>
    }
</div>
