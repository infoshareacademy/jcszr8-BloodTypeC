@model IndexViewModel
@using BloodTypeC.Logic;

@{
    ViewData["Title"] = "Home Page";
    
}

<form asp-controller="Home" asp-action="Index" method="post">
    <p>
        Beer brewery: <input type="text" asp-for="@Model.searchBrewery" />       
    </p>
    <p>
        Beer name: <input type="text" asp-for="@Model.searchBeerName" />       
    </p> 
    <p>
        Beer flavors:
    </p> 
    @for (int i = 0; i < Model.CheckedListOfFlavors.Count; i++)
    {
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" asp-for="@Model.CheckedListOfFlavors[i].IsChecked">
               <input type="hidden" asp-for="@Model.CheckedListOfFlavors[i].Name"/>
          <label class="form-check-label" for="flexCheckDefault">@Model.CheckedListOfFlavors[i].Name</label>
          <input type="hidden" asp-for="@Model.CheckedListOfFlavors[i].IsChecked" value="false" />
        </div>
    }
    <p>
        Beer minimum alcohol volume:
        <input type="number" step="0.01" asp-for="@Model.minAbv" min="0"/>       
    </p>
    <p>
        Beer maximum alcohol volume:
        <input type="number" step="0.01" asp-for="@Model.maxAbv" min="0"/>       
    </p>
    <input type="hidden" asp-for="@Model.Beers"/>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="container">
    <div class="row gy-4">
        @foreach (var item in Model.Beers)
        {       
                  <div class="col-12 col-md-6 col-lg-4 col-xxl-3 item">
                  <div class="card" style="width: 300px;">
                  <div class="card-body">
                  <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Brewery<br>asdasdasdasd</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger">Delete</a>
                  </div>
                </div>
                </div>
        }
</div>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

