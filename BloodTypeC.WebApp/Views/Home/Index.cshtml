@model IEnumerable<BloodTypeC.DAL.Beer>
@using BloodTypeC.Logic;

@{
    ViewData["Title"] = "Home Page";
    var flavors = BeerOperations.GetAllFlavors();
}

<form asp-controller="Home" asp-action="Index">
    <p>
        Beer brewery: <input type="text" name="searchBrewery" />       
    </p>
    <p>
        Beer name: <input type="text" name="searchBeerName" />       
    </p> 
    <p>
        Beer flavors:
    </p> 
    @foreach(var flavor in flavors)
    {
      <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" name="searchFlavors" value="@flavor" id="flexCheckDefault" >
      <label class="form-check-label" for="flexCheckDefault">
        @flavor
      </label>
    </div>
    }
    <p>
        Beer minimum alcohol volume:
        <input type="number" step="0.01" name="minAbv" min="0"/>       
    </p>
    <p>
        Beer maximum alcohol volume:
        <input type="number" step="0.01" name="maxAbv" min="0"/>       
    </p>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="container">
    <div class="row gy-4">
        @foreach (var item in Model)
        {       
                  <div class="col-12 col-md-6 col-lg-4 col-xxl-3 item">
                  <div class="card" style="width: 300px;">
                  <div class="card-body">
                  <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Brewery<br>asdasdasdasd</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger">Delete</a>
                  </div>
                </div>
                </div>
        }
</div>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

