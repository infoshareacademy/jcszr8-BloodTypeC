@model IEnumerable<BloodTypeC.DAL.Beer>
@{
    ViewData["Title"] = "Favorites";
}

<h1>Your favorite beers</h1>

<div class="container-fluid">
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xxl-3 item">
                    <div class="card" style="width: 300px;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Brewery</p>
                            <p class="card-text">Score: @item.Score</p>
                            <p class="card-text">Abv: @item.AlcoholByVolume</p>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">More details</a>
                            <a asp-action="DeleteFromFav" asp-route-id="@item.Id" class="btn btn-danger">Remove</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div>The list is currently empty.</div>
        }
    </div>
</div>