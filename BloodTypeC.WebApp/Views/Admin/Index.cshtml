@model BloodTypeC.DAL.Models.Views.AdminPanelViewModel

@{
    ViewData["Title"] = "Index";
}

<a class="search-button" asp-action="CreateUser">Create user</a>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users.FirstOrDefault().UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Email)
            </th>
            <th>
                Roles
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td>
                    @Html.ActionLink("Assigne roles", "AssigneUserRoles", new { userId=item.Id })

                </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id=item.Id }) |
                   @Html.ActionLink("Delete", "DeleteUser", new { id=item.Id }) |
                   @if(item.EmailConfirmed==false)
                    {
                        @Html.ActionLink("Activate", "ActivateUser", new { id=item.Id })
                    }
                    else
                    {
                        @Html.ActionLink("Deactivate", "DeactivateUser", new { id=item.Id })
                    }
            </td>
        </tr>
}
    </tbody>
</table>
<a class="search-button" asp-action="CreateRole">Create role</a>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Roles.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles.FirstOrDefault().Name)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Roles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditRole", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "DeleteRole", new { id=item.Id})
                </td>
            </tr>
        }
    </tbody>
</table>


