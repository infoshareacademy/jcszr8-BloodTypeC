@model BloodTypeC.DAL.Models.Views.AssigneRolesView

@{
    ViewData["Title"] = "AssigneUserRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AssigneUserRoles</h1>

<h4>AssigneRolesView</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssigneUserRoles">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RolesIdToAssigne" class="control-label"></label>
                <select class="selectpicker" multiple title="Select user roles..." asp-for="RolesIdToAssigne">
                    @foreach (var role in Model.AvalaibleRolesToAssigne)
                    {
                                <option value="@role.Id">@role.Name</option>
                    }
                </select>
                <span asp-validation-for="RolesIdToAssigne" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="hidden" asp-for="@Model.User.Id" class="form-control" value="@Model.User.Id" />                
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assigne roles" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h1 class="text-white">User roles</h1>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                Role
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserRoles)
        {
                <tr>
                    <td>
                    @item
                    </td>
                    <td>
                                <form asp-action="RemoveUserRole" asp-route-id="@Model.User.Id" asp-route-roleName="@item">
                            <input type="submit" value="Remove" class="btn btn-danger" />
                        </form>
                </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Index">Back to List</a>
</div>

