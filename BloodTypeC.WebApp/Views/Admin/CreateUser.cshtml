@model BloodTypeC.DAL.Models.User

@{
    ViewData["Title"] = "Create";
}

<div class="page-name">
    Create user
</div>
<div class="row">
    <div class="search-form">
        <div class="products">
            <div class="col-md-4">
                <form asp-action="CreateUser">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label text-white">EMAIL</label>
                        <input asp-for="Email" class="form-control" placeholder="e-mail" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordHash" class="control-label text-white">PASSWORD</label>
                        <input asp-for="PasswordHash" class="form-control" placeholder="Password" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="search-button" />
                    </div>
                </form>
                <div>
                    <a asp-action="Index"><button class=search-button>Back to List</button></a>
                </div>
            </div>
        </div>
    </div>
</div>