@using BloodTypeC.Logic;
@using BloodTypeC.DAL;
@model IndexViewModel
@{
    ViewData["Title"] = "Search beer";
}

<div class="container px-lg-5">
<form asp-controller="Search" asp-action="Index" method="post">
<p class="text-light">
Beer brewery: <input type="text" asp-for="@Model.searchBrewery" />
</p>
<p class="text-light">
Beer name: <input type="text" asp-for="@Model.searchBeerName" />
</p>
<p class="text-light">
Beer flavors:
</p>
        @for (int i = 0; i < Model.CheckedListOfFlavors.Count; i++)
        {
    <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" asp-for="@Model.CheckedListOfFlavors[i].IsChecked">
    <input type="hidden" asp-for="@Model.CheckedListOfFlavors[i].Name"/>
    <label class="form-check-l text-light" for="flexCheckDefault">@Model.CheckedListOfFlavors[i].Name</label>
    <input type="hidden" asp-for="@Model.CheckedListOfFlavors[i].IsChecked" value="false" />
    </div>
        }
<p class="text-light">
Beer minimum alcohol volume:
<input type="number" step="0.01" asp-for="@Model.minAbv" min="0" /><br>
<span asp-validation-for="minAbv" class="text-danger"></span>
</p>
<p class="text-light">
Beer maximum alcohol volume:
<input type="number" step="0.01" asp-for="@Model.maxAbv" min="0"/>
</p>
<input type="hidden" asp-for="@Model.Beers"/>
<button type="submit" class="btn btn-primary">Search</button>
</form>
</div>
<section class="pt-4">
<div class="container px-lg-5">
<div class="row gx-lg-5">
            @foreach (var item in Model.Beers)
            {
    <div class="col-lg-6 col-xxl-4 mb-5">
    <div class="card card-background border-0 h-100">
        <div class="card-body text-light text-center p-4 p-lg-5 pt-0 pt-lg-0">
        <h5 class="card-title text-light">@item.Name</h5>
        <p class="card-text text-light">@item.Brewery<br>asdasdasdasd</p>
    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-primary">Delete</a>
                            @if (!DB.FavoriteBeers.Any(x => x.Id == item.Id.ToString()))
                            {
        <a asp-controller="FavoriteBeers" asp-action="AddToFavorites" asp-route-id="@item.Id" class="btn btn-warning">❤ Fav it!</a>
                            }
                            else
                            {
        <a asp-controller="FavoriteBeers" asp-action="RemoveFromFavorites" asp-route-id="@item.Id" class="btn btn-outline-warning">💔 Unfav</a>
                            }
    </div>
    </div>
    </div>
            }
</div>
</div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}