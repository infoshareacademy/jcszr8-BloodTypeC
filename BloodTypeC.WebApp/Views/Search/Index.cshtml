@using BloodTypeC.Logic;
@using BloodTypeC.DAL;
@model IndexViewModel

@{
    ViewData["Title"] = "Beer Search";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>

<body>
    <div class="page-name">
        Beer search
    </div>

    <div class="col-md-12">
        <div class="section-center">
            <div class="container">
                <div class="row">
                    <div class="search-form">
                        <form asp-controller="Search" asp-action="Index" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <span class="form-label text-white">Beer name</span>
                                        <input class="form-control" type="text" placeholder="Beer name" asp-for="@Model.searchBeerName">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <span class="form-label text-white">Brewery</span>
                                        <input class="form-control" type="text" placeholder="Brewery name" asp-for="@Model.searchBrewery">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <span class="form-label text-white">Minimum alcohol volume</span>
                                        <span asp-validation-for="minAbv" class="text-danger"></span>
                                        <input class="form-control" type="number" step="0.01" min="0" placeholder="Minimum alcohol %" asp-for="@Model.minAbv">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <span class="form-label text-white">Maximum alcohol volume</span>
                                        <input class="form-control" type="number" step="0.01" min="0" placeholder="Maximum alcohol %" asp-for="@Model.maxAbv">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <span class="form-label">Select your favorites flavors</span>
                                        @for (int i = 0; i < Model.CheckedListOfFlavors.Count; i++)
                                        {
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" asp-for="@Model.CheckedListOfFlavors[i].IsChecked">
                                                <input type="hidden" asp-for="@Model.CheckedListOfFlavors[i].Name" />
                                                <label class="form-label text-light" for="flexCheckDefault">@Model.CheckedListOfFlavors[i].Name</label>
                                                <input type="hidden" asp-for="@Model.CheckedListOfFlavors[i].IsChecked" value="false" />
                                            </div>
                                        }
                                        <input type="hidden" asp-for="@Model.Beers" />
                                    </div>
                                </div>
                            </div>

                            <div class="buttons">
                                <div class="form-btn">
                                    <button class="search-button">Show beers</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="products">
        @foreach (var item in Model.Beers)
        {
            <div class="product-card">
                <div class="card-body">
                    <div class="beer-image-possition"><img src="~/Images/mockup.png" class="beer-image"></div>
                    <h5>@item.Name</h5>
                    <p>@item.Brewery<br>asdasdasdasd</p>
                    <div class="buttons">
                        <button class="product-button">
                            <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Beer">Details</a>
                        </button>
                        <button class="product-button">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </button>
                        <button class="product-button">
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </button>
                    </div>
                    <div class="buttons">
                        <div>
                            @if (!BloodTypeC.DAL.DB.FavoriteBeers.Any(x => x.Id == item.Id.ToString()))
                            {
                                <button class="fav-button">
                                    <a asp-controller="FavoriteBeers" asp-action="AddToFavorites" asp-route-id="@item.Id">❤ Fav it!</a>
                                </button>
                            }
                            else
                            {
                                <button class="fav-rem-button">
                                    <a asp-controller="FavoriteBeers" asp-action="RemoveFromFavorites" asp-route-id="@item.Id">💔 Unfav</a>
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}