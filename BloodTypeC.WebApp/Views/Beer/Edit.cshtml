@model BloodTypeC.WebApp.Models.BeerViewModel
@using BloodTypeC.WebApp.Language;
@inject LanguageService language

@{
    ViewData["Title"] = @language.Getkey("Edit");
}

<div class="page-name">
    @language.Getkey("Edit Beer")
</div>
<div class="col-md-12">
    <div class="section-center">
        <div class="container">
            <div class="row">
                <div class="search-form">
                    <form asp-action="Edit">
                        <div class="row">
                            <div class="col-md-6">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <span class="form-label text-white">@language.Getkey("Beer Name")</span>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="form-label text-white">@language.Getkey("Brewery")</span>
                                    <input asp-for="Brewery" class="form-control" />
                                    <span asp-validation-for="Brewery" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="form-label text-white">@language.Getkey("Style")</span>
                                    <input asp-for="Style" class="form-control" />
                                    <span asp-validation-for="Style" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="form-label text-white">@language.Getkey("Flavors")</span>
                                    <input asp-for="FlavorString" class="form-control" />
                                    <span asp-validation-for="FlavorString" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="form-label text-white">@language.Getkey("Alcohol by volume")</span>
                                    <input asp-for="AlcoholByVolume" class="form-control" />
                                    <span asp-validation-for="AlcoholByVolume" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="form-label text-white">@language.Getkey("Score")</span>
                                    <input asp-for="Score" class="form-control" />
                                    <span asp-validation-for="Score" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3"></div><div class="col-md-6">
                                <div class="form-group">
                                    <span class="form-label text-white">@language.Getkey("Image")</span>
                                    <input asp-for="Image" class="form-control" />
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3"></div>
                        </div>
                        <div class="buttons">
                            <div class="form-group">
                                <input type="submit" value=@language.Getkey("Save") class="search-button" />
                            </div>
                        </div>
                        <div class="buttons">
                            <div class="form-group">
                                <button class="search-button" asp-controller="Home" asp-action="Index">@language.Getkey("Back to list")</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>