@using BloodTypeC.Logic.Extensions;
@using System.ComponentModel.DataAnnotations;
@model BeerViewModel

@{
    ViewData["Title"] = "Create beer";
    var nameMaxLength = Model.GetAttributeFrom<StringLengthAttribute>(nameof(Model.Name)).MaximumLength;
    var nameMinLength = Model.GetAttributeFrom<StringLengthAttribute>(nameof(Model.Name)).MinimumLength;
    var maxScore = Convert.ToDouble(Model.GetAttributeFrom<RangeAttribute>(nameof(Model.Score)).Maximum);
    var maxAbv = Convert.ToDouble(Model.GetAttributeFrom<RangeAttribute>(nameof(Model.AlcoholByVolume)).Maximum);
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>

<body>
    <div class="page-name">
        Add Beer
    </div>

    <div class="col-md-12 section-center container search-form">
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <div> <span class="form-label text-white">Beer Name<font color="red">*</font></span></div>
                    <div class="input-group col-md-6">
                        <input type="text" asp-for="Name" class="form-control" placeholder="Beer name" />
                        <div>
                            <button class="btn btn-outline-secondary" type="button" data-toggle="tooltip" title="The name needs to be @nameMinLength - @nameMaxLength characters long.">
                                <i class="bi bi-info-circle" id="info-icon"></i>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div><div class="col-md-6">
                    <div> <span class="form-label text-white">Brewery</span></div>
                    <div class="input-group col-md-6">
                        <input type="text" asp-for="Name" class="form-control" placeholder="Brewery name" />
                        <div>
                            <button class="btn btn-outline-secondary" type="button" data-toggle="tooltip" data-html="true" title="We will capitalise the first letter.">
                                <i class="bi bi-info-circle" id="info-icon"></i>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="Brewery" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div> <span class="form-label text-white">Style</span></div>
                    <div class="input-group col-md-6">
                        <input type="text" asp-for="Style" class="form-control" placeholder="Style" />
                        <div>
                            <button class="btn btn-outline-secondary" type="button" data-toggle="tooltip" title="We will capitalise the first letters and remove any non-letter characters, except dash (-).">
                                <i class="bi bi-info-circle" id="info-icon"></i>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="Style" class="text-danger"></span>
                </div><div class="col-md-6">
                    <div> <span class="form-label text-white">Flavors</span></div>
                    <div class="input-group col-md-6">
                        <input type="text" asp-for="FlavorString" class="form-control" placeholder="Flavors" />
                        <div>
                            <button class="btn btn-outline-secondary" type="button" data-toggle="tooltip" data-html="true" title="You can separate multiple flavors using <b>any</b> non-letter characters.<br>But pros just use commas or spaces.">
                                <i class="bi bi-info-circle" id="info-icon"></i>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="FlavorString" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div> <span class="form-label text-white">Alcohol by volume</span></div>
                    <div class="input-group col-md-6">
                        <input type="text" asp-for="AlcoholByVolume" class="form-control" placeholder="Alcohol by volume" />
                        <div>
                            <button class="btn btn-outline-secondary" type="button" data-toggle="tooltip" title="Leaving this empty will set the value to 0.<br>Max value is @maxAbv.">
                                <i class="bi bi-info-circle" id="info-icon"></i>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="AlcoholByVolume" class="text-danger"></span>
                </div><div class="col-md-6">
                    <div> <span class="form-label text-white">Brewery</span></div>
                    <div class="input-group col-md-6">
                        <input type="text" asp-for="Score" class="form-control" placeholder="Score" />
                        <div>
                            <button class="btn btn-outline-secondary" type="button" data-toggle="tooltip" data-html="true" title="Leaving this empty will set the score to 0.<br>Max value is @maxScore.">
                                <i class="bi bi-info-circle" id="info-icon"></i>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>
            </div>

            <div class="buttons">
                <div class="form-group">
                    <br /><input type="submit" value="Create" class="search-button" />
                </div>
            </div>
        </form>
    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}