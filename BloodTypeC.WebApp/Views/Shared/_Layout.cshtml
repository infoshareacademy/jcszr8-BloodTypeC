@using BloodTypeC.WebApp.Language;
@inject LanguageService language

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - @language.Getkey("Beero")</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/i18n/defaults-*.min.js"></script>
  <script>
    $('#lang').selectpicker();
  </script>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container px-lg-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/Images/logo-smallmargin.png" style="height:10rem"> </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="FavoriteBeers" asp-action="Favorites">@language.Getkey("Favorites")</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="BeerSearch" asp-action="Index">@language.Getkey("Search")</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">@language.Getkey("Admin panel")</a></li>
                    }
                    <li class="nav-item"><a class="nav-link" aria-current="page" asp-controller="Beer" asp-action="Create">@language.Getkey("Add a beer")</a></li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
            <div class="dropdown nav-item">
                <a href="#"><button class="logout padding-rem">@language.Getkey("Languages")</button></a>
                <ul>
                    <li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US">English</a></li>
                    <li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="pl-PL">Polski</a></li>
                </ul>
            </div>
            @*<div class="nav-wrapper">
                <div class="s1-nav">
                    Language:
                    <ul>
                        <li>
                            <b>English</b> <i class="fa fa-angle-down" aria-hidden="true"></i>
                            <div class="triangle"></div>
                            <ul class="language">
                                <li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US" class="nav-link>"><i class="flag-icon flag-icon-gb"></i>English</a></li>
                                <li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="pl-PL" class="nav-link>"><i class="flag-icon flag-icon-pl"></i>Polski</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>*@
        </div>
    </nav>
    @RenderBody()
    <!-- Footer-->
</body>
<footer class="py-5 bg-dark">
    <div class="container px-5"><p class="m-0 text-center text-white">Copyright &copy; Beer-o-pedia 2023</p></div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
</html>