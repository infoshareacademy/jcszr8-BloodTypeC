@page
@model LogoutModel
@using BloodTypeC.WebApp.Language;
@inject LanguageService language

@{
    ViewData["Title"] = @language.Getkey("Logout");
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="search-button">@language.Getkey("Click here to Logout")</button>
            </form>
        }
        else
        {
            <p>@language.Getkey("You have successfully logged out of the application.")</p>
        }
    }
</header>