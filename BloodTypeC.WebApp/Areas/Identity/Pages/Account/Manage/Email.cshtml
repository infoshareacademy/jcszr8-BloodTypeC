@page
@model EmailModel
@using BloodTypeC.WebApp.Language;
@inject LanguageService language

@{
    ViewData["Title"] = @language.Getkey("Manage Email");
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="profile-edit">
    E-mail
</div>
<div class="search-form">
    <div class="center-elements">
        <div class="col-md-6">
            <form id="email-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="form-group">
                        <span class="form-label text-white">@language.Getkey("Email")</span>
                        <input asp-for="Email" class="form-control" disabled />
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <span class="form-label text-white">@language.Getkey("Email")</span>
                        <input asp-for="Email" class="form-control" disabled />
                        <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">@language.Getkey("Send verification email")</button>
                    </div>
                }
                <div class="form-group">
                    <span class="form-label text-white">@language.Getkey("new email")</span>
                    <input asp-for="Input.NewEmail" class="form-control" placeholder=@language.Getkey("new email") />
                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                </div>
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="search-button">@language.Getkey("Save")</button>
                <br /><partial name="_StatusMessage" for="StatusMessage" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
