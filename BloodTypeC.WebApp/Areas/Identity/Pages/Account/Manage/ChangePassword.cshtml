@page
@model ChangePasswordModel
@using BloodTypeC.WebApp.Language;
@inject LanguageService language

@{
    ViewData["Title"] = @language.Getkey("Change password");
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="profile-edit">
    @language.Getkey("Password")
</div>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="search-form">
    <div class="center-elements">
        <div class="col-md-6">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group profile-space">
                    <span class="form-label text-white">@language.Getkey("Current password")</span>
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder=@language.Getkey("Current password") />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="form-label text-white">@language.Getkey("New password")</span>
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=@language.Getkey("New password") />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="form-label text-white">@language.Getkey("Confirm new password")</span>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=@language.Getkey("Confirm new password") />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="search-button">@language.Getkey("Save")</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
