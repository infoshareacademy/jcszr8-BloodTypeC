@page
@model RegisterModel
@using BloodTypeC.WebApp.Language;
@inject LanguageService language

@{
    ViewData["Title"] = @language.Getkey("Register");
}

<div class="page-name">
    @language.Getkey("Register")
</div>
<div class="col-md-12">
    <div class="section-center">
        <div class="container">
            <div class="search-form">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="center-elements">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <span class="form-label text-white">@language.Getkey("Email")</span>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=@language.Getkey("Email") />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <span class="form-label text-white">@language.Getkey("Password")</span>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder=@language.Getkey("Password")/>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <span class="form-label text-white">@language.Getkey("Confirm Password")</span>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=@language.Getkey("Confirm password")/>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="center-elements">
                                <button id="registerSubmit" type="submit" class="search-button">@language.Getkey("Register")</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }