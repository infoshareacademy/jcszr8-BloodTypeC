@page
@model ForgotPasswordModel
@using BloodTypeC.WebApp.Language;
@inject LanguageService language

@{
    ViewData["Title"] = @language.Getkey("Forgot your password?");
}

<div class="page-name">
    @language.Getkey("Forgot your password?")
</div>
<div class="col-md-12">
    <div class="section-center">
        <div class="container">
            <div class="search-form">
                <form method="post">
                    <div class="center-elements">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <span class="form-label text-white">@language.Getkey("Email")</span>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=@language.Getkey("Email") />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="center-elements">
                        <button type="submit" class="reset-button">@language.Getkey("Reset Password")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }